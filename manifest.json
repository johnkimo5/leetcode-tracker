{
  "manifest_version": 3,
  "name": "LeetCode Tracker",
  "version": "1.0",
  "description": "Track LeetCode progress for you and your friends",
  "permissions": [
    "storage",
    "https://leetcode.com/*"
  ],
  "host_permissions": [
    "https://leetcode.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}